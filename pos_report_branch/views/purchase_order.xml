<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="purchase_order_view_form" model="ir.ui.view">
            <field name="name">purchase_order_view_form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <field name="picking_type_id" position='after'>
                    <field name="sh_branch_bool" invisible='1'></field>
                    <field name="report_branch_id" invisible='1'></field>
                </field>
            </field>
        </record>

        <record id="purchase_order_view_tree" model="ir.ui.view">
            <field name="name">purchase_order_view_tree</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree" />
            <field name="arch" type="xml">
                <field name="name" position='after'>
                    <field name="sh_branch_bool" invisible='1'></field>
                </field>
            </field>
        </record>

        <record id="purchase_report_view_form" model="ir.ui.view">
            <field name="name">purchase.report_view_form</field>
            <field name="model">purchase.report</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_search" />
            <field name="arch" type="xml">
                <xpath expr="//group" position="inside">
                    <separator/>
                    <filter string="Branch" name="group_report_branch_id" context="{'group_by':'report_branch_id'}"/>
                </xpath>
                <field name="partner_id" position='after'>
                    <field name="report_branch_id" invisible='1'></field>
                </field>
            </field>
        </record>
    </data>
</odoo>
