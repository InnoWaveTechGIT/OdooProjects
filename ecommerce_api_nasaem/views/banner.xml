<?xml version="1.0"?>

<odoo>

    <data>


        <record id="banner_list_view_nasaem" model="ir.ui.view">

            <field name="name">Banner List</field>

            <field name="model">banner.nasaem</field>


            <field name="arch" type="xml">


                <tree>

                    <field name="image" />

                    <field name="category_id" />

                </tree>

            </field>

        </record>


        <record id="banner_form_view_nasaem" model="ir.ui.view">

            <field name="name">banner Form</field>

            <field name="model">banner.nasaem</field>


            <field name="arch" type="xml">


                <form string="Banner">


                    <sheet>


                        <group>


                            <group>

                                <field name="image" />
                                <field name="image_url" />

                            </group>


                            <group>

                                <field name="category_id" />
                                <field name="for_register" />
                                <field name="banner_language"/>
                            </group>

                        </group>

                    </sheet>

                </form>

            </field>

        </record>


        <record id="banner_action_window_nasaem" model="ir.actions.act_window">

            <field name="name">Banner</field>

            <field name="res_model">banner.nasaem</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first Banner Record! </p>

            </field>

        </record>

        <menuitem id="nasaem_banner" name="Banner" sequence="99" parent="nasaem_root"  />
        <menuitem id="nasaem_banner1" name="Banner" sequence="2" parent="nasaem_banner" action="banner_action_window_nasaem" />

    </data>

</odoo>