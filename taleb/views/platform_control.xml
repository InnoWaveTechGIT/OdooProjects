<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="platform_control_list_view_taleb" model="ir.ui.view">

            <field name="name">platform control</field>

            <field name="model">platform.control</field>


            <field name="arch" type="xml">
                <!-- <> -->

                <tree>


                    <field name="platform_type" />
                    <field name="min_version" />
                    <field name="max_version" />


                </tree>

            </field>

        </record>
        <record id="platform_control_form_view_taleb" model="ir.ui.view">

            <field name="name">platform type Form</field>

            <field name="model">platform.control</field>


            <field name="arch" type="xml">


                <form string="Privacy Policy">
                    <header>

                        <button name="send_notification" string="Notification Users" type="object" class="oe_highlight" attrs="{'invisible': [('can_send', '=', False)]}" />
                        
                    </header>

                    <sheet>
                        <group>
                            <group>

                                <field name="platform_type" />
                                <field name="android_url" attrs="{'invisible': [('platform_type', '!=', 'android')]}"/>
                                <field name="ios_url" attrs="{'invisible': [('platform_type', '!=', 'ios')]}"/>
                            </group>
                            <group>
                                <field name="min_version" />
                                <field name="max_version" />
                                <field name="message" />
                                <field name="can_send"  invisible = '1'/>
                            </group>
                        </group>





                    </sheet>

                </form>

            </field>

        </record>
        <record id="platform_control_window_taleb" model="ir.actions.act_window">

            <field name="name">platform type</field>

            <field name="res_model">platform.control</field>

            <field name="view_mode">tree,form</field>

            <field name="context"></field>


            <!-- <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field> -->

        </record>


        <menuitem id="taleb_platform_control" name="platform control" parent="taleb_user_token" action="platform_control_window_taleb"/>


    </data>


</odoo>