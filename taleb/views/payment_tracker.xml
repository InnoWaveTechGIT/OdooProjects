<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_subscription_payments_tree" model="ir.ui.view">
            <field name="name">subscription_payments.tree</field>
            <field name="model">subscription_payments</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="user_id"/>
                    <field name="course_id"/>
                    <field name="state"/>
                    <field name="payment_type"/>
                    <field name="created_date"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_subscription_payments_form" model="ir.ui.view">
            <field name="name">subscription_payments.form</field>
            <field name="model">subscription_payments</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="user_id"/>
                                <field name="course_id"/>
                                <field name="section_ids" widget='many2many_tags'/>

                                <!-- <field name="state"/> -->
                                
                                <!-- <field name="payment_method"/> -->


                                <!-- <field name="number_of_payments"/> -->
                                <!-- <field name="pyment_number"/> -->
                                <field name="discont"/>
                                <field name="created_date"/>
                            </group>
                            <group>
                                <field name="payment_type"/>
                                <field name="coupon_id" attrs="{'invisible': [('payment_type', '!=', 'Coupon')]}"/>
                                <field name="commition" attrs="{'invisible': [('payment_type', '!=', 'Coupon')]}"/>
                                
                            </group>
                        </group>
                        <notebook>
                            <page string="Payment Tracker">
                                <field name="payment_tracker_ids">
                                    <tree>
                                        <field name="payment_amount"/>
                                        <field name="payment_date"/>
                                        <field name="sessions_per_payment"/>

                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action with Menu -->
        <record id="action_subscription_payments" model="ir.actions.act_window">

            <field name="name">Subscription Payments</field>

            <field name="res_model">subscription_payments</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first Record! </p>

            </field>
            <!-- <> -->
        </record>


        <menuitem id="menu_subscription_payments_list" name="Subscription Payments" sequence="3" parent="taleb_user_courses" action="action_subscription_payments"/>
    </data>
</odoo>