<?xml version="1.0"?>

<odoo>

    <data>


        <record id="user_about_us_list_view_taleb" model="ir.ui.view">

            <field name="name">User about_us List</field>

            <field name="model">about.us</field>


            <field name="arch" type="xml">


                <tree>

                    <field name="title" />
                    <field name="brief" />


                </tree>

            </field>

        </record>


        <record id="user_about_us_form_view_taleb" model="ir.ui.view">

            <field name="name">about_us Form</field>

            <field name="model">about.us</field>


            <field name="arch" type="xml">


                <form string="about Us">


                    <sheet>


                        <group>


                            <group>


                                <field name="title" />


                            </group>


                            <group>

                                <field name="brief" />

                            </group>
                            <group>
                                <field name="face_book" />
                                <field name="linked_in" />
                                <field name="instagram" />
                            </group>
                            <group>
                                <field name="first_image" filename="first_image_file_name"
                                    class="oe_avatar" />
                                <field name="second_image" filename="second_image_file_name"
                                    class="oe_avatar" />
                                <field name="third_image" filename="third_image_file_name"
                                    class="oe_avatar" attrs="{'readonly':[('id','=',2)]}"/>
                            </group>
                        </group>


                    </sheet>

                </form>

            </field>

        </record>


        <record id="about_us_action_window_taleb" model="ir.actions.act_window">

            <field name="name">About Us</field>

            <field name="res_model">about.us</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field>
<!-- <> -->
        </record>

        <menuitem id="taleb_user_about_us" name="About Us" sequence="4" parent="us_menu_item"
            action="about_us_action_window_taleb" />

    </data>

</odoo>