<?xml version="1.0"?>

<odoo>

    <data>


        <record id="user_location_list_view_taleb" model="ir.ui.view">

            <field name="name">User location List</field>

            <field name="model">location</field>


            <field name="arch" type="xml">


                <tree editable="top">

                    <field name="name" />
                    <field name="location_id" />
                    <field name="order_number" />
                    
                    


                </tree>

            </field>

        </record>


        <record id="user_location_form_view_taleb" model="ir.ui.view">

            <field name="name">location Form</field>

            <field name="model">location</field>


            <field name="arch" type="xml">


                <form string="Location">


                    <sheet>


                        <group>


                            <group>


                                <field name="name" />
                    <field name="location_id" />
                    <field name="order_number" />


                            </group>


                            
                           
                        </group>


                    </sheet>

                </form>

            </field>

        </record>


        <record id="location_action_window_taleb" model="ir.actions.act_window">

            <field name="name">Hero Section</field>

            <field name="res_model">location</field>

            <field name="view_mode">tree</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field>

        </record>

        <menuitem id="taleb_user_location" name="Locations" sequence="31" parent="contacts.menu_localisation"
            action="location_action_window_taleb" />

    </data>

</odoo>