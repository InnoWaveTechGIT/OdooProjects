<?xml version="1.0"?>

<odoo>

    <data>


        <record id="user_subscription_list_view_taleb" model="ir.ui.view">

            <field name="name">User subscription List</field>

            <field name="model">subscription</field>


            <field name="arch" type="xml">


                <tree>

                    <field name="user_id" />
                    <field name="course_id" />
                    <field name="start_date" />
                    <field name="status" />


                </tree>

            </field>

        </record>


        <record id="user_subscription_form_view_taleb" model="ir.ui.view">

            <field name="name">subscription Form</field>

            <field name="model">subscription</field>


            <field name="arch" type="xml">


                <form string="subscription">


                    <sheet>


                        <group>


                            <group>

                                <field name="user_id" />
                                <field name="course_id" />
                                <field name="start_date" />
                                <field name="end_date" />
                                <field name="status" />


                            </group>


                            

                        </group>


                        <notebook>
                            <page name="sections" string="Purchased Sections">



                                <field name="purchased_section_ids">
                                    <tree editable="bottom">
                                        <field name="user_id" />
                                        <field name="section_id" />
                                    </tree>

                                </field>

                            </page>
                            <page name="sessions" string="Purchased Sessions">



                                <field name="purchased_sessions_ids">
                                    <tree editable="bottom">
                                        <field name="user_id" />
                                        <field name="session_id" />
                                    </tree>

                                </field>

                            </page>

                        </notebook>

                    </sheet>

                </form>

            </field>

        </record>


        <record id="subscription_action_window_taleb" model="ir.actions.act_window">

            <field name="name">User subscription</field>

            <field name="res_model">subscription</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field>

        </record>

        <menuitem id="taleb_user_subscription1" name="Subscription" sequence="2" parent="taleb_user_courses" action="subscription_action_window_taleb"/>


    </data>

</odoo>