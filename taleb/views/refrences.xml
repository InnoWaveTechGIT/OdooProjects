<?xml version="1.0"?>

<odoo>

    <data>


        <record id="refrences_view_taleb" model="ir.ui.view">

            <field name="name">Refrences</field>

            <field name="model">refrences</field>


            <field name="arch" type="xml">


                <tree>
                    <field name="refrence_name"/>

                    <field name="content" />
                    <field name="file_path" />
                    <field name="file_full_url" />
                    


                </tree>

            </field>

        </record>


        <record id="refrences_form_view_taleb" model="ir.ui.view">

            <field name="name">Refrences</field>

            <field name="model">refrences</field>


            <field name="arch" type="xml">


                <form string="Refrences">


                    <sheet>


                        <group>




                            <group>
                                <field name="refrence_name"/>
                                <field name="pdf_file" class="oe_avatar" filename="file_name"/>

                                
                                <field name="session_id"/>
                                
                                <field name="content" />
                                

                                
                                </group>
                                </group>
                                
                            </sheet>

                        </form>
        
                    </field>
        
                </record>
                <record id="refrences_window_taleb" model="ir.actions.act_window">

                    <field name="name">Refrences</field>
        
                    <field name="res_model">refrences</field>
        
                    <field name="view_mode">tree,form</field>
        
                    <field name="context">{}</field>
        
        
                    <field name="help" type="html">
        
                        <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>
        
                    </field>
        
                </record>
        
                
                <menuitem id="refrences_menu_item" name="Refrences" sequence="7" parent="us_menu_item"
                action="refrences_window_taleb" />
            </data>

        </odoo>
