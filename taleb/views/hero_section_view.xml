<?xml version="1.0"?>

<odoo>

    <data>


        <record id="user_hero_section_list_view_taleb" model="ir.ui.view">

            <field name="name">User hero_section List</field>

            <field name="model">hero.section</field>


            <field name="arch" type="xml">


                <tree>

                    <field name="title" />



                </tree>

            </field>

        </record>


        <record id="user_hero_section_form_view_taleb" model="ir.ui.view">

            <field name="name">hero_section Form</field>

            <field name="model">hero.section</field>


            <field name="arch" type="xml">


                <form string="Hero Section">


                    <sheet>


                        <group>


                            <group>


                                <field name="title" />


                            </group>


                            
                            <group>
                                <field name="hero_section_image" filename="image_file_name"
                                    class="oe_avatar" />
                               </group>
                        </group>


                    </sheet>

                </form>

            </field>

        </record>


        <record id="hero_section_action_window_taleb" model="ir.actions.act_window">

            <field name="name">Hero Section</field>

            <field name="res_model">hero.section</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field>

        </record>

        <menuitem id="taleb_user_hero_section" name="Hero Section" sequence="31" parent="teleb_root"
            action="hero_section_action_window_taleb" />

    </data>

</odoo>