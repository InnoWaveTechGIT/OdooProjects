<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_package_subscription_payments_tree" model="ir.ui.view">
            <field name="name">package_subscription_payments.tree</field>
            <field name="model">package_subscription_payments</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="user_id"/>
                    <field name="Package"/>
                
                    <field name="payment_type"/>
                    <field name="created_date"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_package_subscription_payments_form" model="ir.ui.view">
            <field name="name">subscription_payments.form</field>
            <field name="model">package_subscription_payments</field>
            <field name="arch" type="xml">
                <form>
                
                    <sheet>
                        <group>
                            <field name="user_id"/>
                            <field name="Package"/>
                            
                            <field name="payment_type"/>
                            <field name="payment_method"/>
                        
                            
                            <field name="number_of_payments"/>
                            <field name="pyment_number"/>
                            <field name="discont"/>
                            <field name="created_date"/>
                        </group>
                        <notebook>
                            <page string="Payment Tracker">
                                <field name="Package_payment_tracker_ids">
                                    <tree>
                                        <field name="payment_amount"/>
                                        <field name="payment_date"/>
                                       
                                        
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action with Menu -->
        <record id="action_package_subscription_payments" model="ir.actions.act_window">

            <field name="name">Package Subscribtion Payment </field>

            <field name="res_model">package_subscription_payments</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first Record! </p>

            </field>
            <!-- <> -->
        </record>
       

        <menuitem id="menu_package_subscription_payments_list" name=" Package Subscription Payments" sequence="3" parent="taleb_user_courses" action="action_package_subscription_payments"/>
    </data>
</odoo>