<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_state_inherite_tree_taleb" model="ir.ui.view">
        <field name="name">res_state_inherite_tree_taleb</field>
        <field name="model">res.country.state</field>
        <field name="inherit_id" ref="base.view_country_state_tree" />
        <field name="arch" type="xml">
            <xpath expr ="//field[@name='code']" position='after'>
                <field name="location_ids" widget='many2many_tags'/>
                <field name="order_number" />

            </xpath>
        </field>
    </record>

    <record id="res_country_inherite_tree_taleb" model="ir.ui.view">
        <field name="name">res_country_inherite_tree_taleb</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_form" />
        <field name="arch" type="xml">
            <xpath expr ="//field[@name='state_ids']" position='replace'>
                <field name="state_ids">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="order_number" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
