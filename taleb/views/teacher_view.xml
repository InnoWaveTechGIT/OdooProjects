<?xml version="1.0"?>

<odoo>

    <data>


        <record id="user_teachers_list_view_taleb" model="ir.ui.view">

            <field name="name">User Teachers List</field>

            <field name="model">teacher</field>


            <field name="arch" type="xml">


                <tree>

                    <field name="name" />
                    <field name="specialization" />
                    <field name="rate" />


                </tree>

            </field>

        </record>


        <record id="user_teachers_form_view_taleb" model="ir.ui.view">

            <field name="name">Teachers Form</field>

            <field name="model">teacher</field>


            <field name="arch" type="xml">


                <form string="Teachers">


                    <sheet>


                        <group>


                            <group>

                                <field name="name" />
                                <field name="specialization" />
                                <field name="rate" />
                                <field name="number_of_rater" />

                            </group>


                            <group>
                                
                                <field name="teacher_image" />
                                <field name="number_of_courses" />
                                <field name="number_of_student" />

                            </group>
                            

                        </group>
                        <group>
                            <field name="description" />
                            
                        </group>
                        <notebook>
                            <page name="courses" string="Courses">
                                <field name="courses_ids" >
                                </field>
                            </page>
                            
                        </notebook>
                        

                    </sheet>

                </form>

            </field>

        </record>


        <record id="teachers_action_window_taleb" model="ir.actions.act_window">

            <field name="name">User teachers</field>

            <field name="res_model">teacher</field>

            <field name="view_mode">tree,form</field>

            <field name="context"></field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field>

        </record>

        <menuitem id="taleb_user_teachers" name="Teachers" sequence="2" parent="teleb_root"
            action="teachers_action_window_taleb" />

    </data>

</odoo>