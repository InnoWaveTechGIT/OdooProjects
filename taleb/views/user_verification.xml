<?xml version="1.0"?>

<odoo>


    <data>


        <record id="user_verification_list_view_taleb" model="ir.ui.view">

            <field name="name">User verification List</field>

            <field name="model">user.verification</field>


            <field name="arch" type="xml">


                <tree>

                    <field name="user_id" />

                    <field name="code" />
                    <field name="user_name" />
                    <field name="user_phone" />
                    

                </tree>

            </field>

        </record>


        <record id="user_verification_form_view" model="ir.ui.view">

            <field name="name">user_verification Form</field>

            <field name="model">user.verification</field>


            <field name="arch" type="xml">


                <form string="User Verification">


                    <sheet>


                        <group>


                            <group>

                                <field name="user_id" />

                                <field name="is_valid" />

                            </group>


                            <group>

                                <field name="code" />
                                <field name="type" />
                                <field name="write_date" />

                            </group>
                            <group>
                            <field name="user_name" />
                    <field name="user_phone" />
                            </group>

                        </group>

                    </sheet>

                </form>

            </field>

        </record>


        <record id="user_verification_action_window_taleb" model="ir.actions.act_window">

            <field name="name">User Verification</field>

            <field name="res_model">user.verification</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user_verification Record! </p>

            </field>

        </record>

        <menuitem id="website_user_verification" name="Verification codes" sequence="8"
            parent="taleb_user_token" action="user_verification_action_window_taleb" />


    </data>

</odoo>