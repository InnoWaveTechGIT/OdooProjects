<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="packages_list_view_taleb" model="ir.ui.view">

            <field name="name">Package List</field>

            <field name="model">packages</field>


            <field name="arch" type="xml">


                <tree>

                   
                    <field name="name" />
                    <field name="new_price"/>
                    <field name="old_price"/>
                    <!-- <field name="subject_class1"/> -->
                     <field name="cost5"/>
                             <field name="cost2"/>
                             <field name="subject_class"/>
                              <field name="brief"/>
                               <field name="image_path"></field>
                    

                </tree>

            </field>

        </record>

        <record id="packages_form_view_taleb" model="ir.ui.view">

            <field name="name">packages Form</field>

            <field name="model">packages</field>


            <field name="arch" type="xml">


                <form string="Packages">


                    <sheet>
                        <group>
                        <group>
                           
                            <field name="name"></field>

                             <field  class="image" name="image" widget="" filename="image_file_name"/>
                              <field name="image_path"></field>
                              <field name="brief"/>
                           </group>
                             <group>
                             <field name="old_price"/>
                             <field name="new_price"/>
                             </group>
                             <group>
                            
                             <field name="cost5"/>
                             <field name="cost2"/>
                             <field name="cost4"/>
                             <field name="subject_class"/>
                             
                             
                             </group>
                             
                             


                        </group>


                       <notebook>
                                            <page name="" string="Courses">
                                                <field name="package_courses">
                                                    <tree editable="bottom">
                                                        <field name="course_id" />
                                                        <field name="image_path"/>
                                                    </tree>
                                                </field>
                                            </page>
                                        </notebook>


                    </sheet>

                </form>

            </field>

        </record>

         <record id="packages_window_taleb" model="ir.actions.act_window">

            <field name="name">Packages</field>

            <field name="res_model">packages</field>

            <field name="view_mode">tree,form</field>

            <field name="context"></field>


            <!-- <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field> -->

        </record>



        <menuitem id="packages_item" name="Packages" parent="teleb_root" sequence="9"/>
            <menuitem id="packages_details" name="Packages" parent="packages_item"
            action="packages_window_taleb"/>


    </data>


</odoo>