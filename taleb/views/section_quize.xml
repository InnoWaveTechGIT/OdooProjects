<?xml version="1.0"?>

<odoo>

    <data>


        <record id="file_list_view_taleb" model="ir.ui.view">

            <field name="name">section quize</field>

            <field name="model">section_quize</field>


            <field name="arch" type="xml">


                <tree>

                    <field name="section_id" />
                    <field name="file_full_url" />
                    <field name="correction_file_full_url" />


                </tree>

            </field>

        </record>


        <record id="pdf_file_form_view_taleb" model="ir.ui.view">
            <field name="name">section_quize.form</field>
            <field name="model">section_quize</field>
            <field name="arch" type="xml">
                <form string="Course Files">
                    <sheet>
                        <group>
                            <group>

                                <field name="pdf_file" class="oe_avatar" filename="file_name" />
                                <field name="file_full_url" invisible="1" />
                            </group>
                            <group>


                                <field name="course_id" />
                                <field name="section_id" />

                            </group>
                            <group>

                                <field name="correction_file" filename='correction_file_name' />
                                <field name="correction_file_full_url" nolabel="1" />


                            </group>

                        </group>
                        <group>

                        </group>


                    </sheet>
                </form>
            </field>
        </record>
        <record id="file_action_window_taleb" model="ir.actions.act_window">

            <field name="name">Section Quiz</field>

            <field name="res_model">section_quize</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field>

        </record>


        <menuitem id="file_courses_video1" name="Section Quiz" sequence="4"
            parent="taleb_user_courses"
            action="file_action_window_taleb" />
    </data>

</odoo>