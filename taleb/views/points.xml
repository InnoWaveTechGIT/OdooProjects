<?xml version="1.0"?>

<odoo>

    <data>


        <record id="points_list_view_taleb" model="ir.ui.view">

            <field name="name">Points </field>

            <field name="model">points</field>


            <field name="arch" type="xml">


                <tree>

                    <field name="number_of_points" />
                    <field   name="price" />


                </tree>

            </field>

        </record>
        <record id="pointst_type_form_view_taleb" model="ir.ui.view">

            <field name="name">Points Form</field>

            <field name="model">points</field>


            <field name="arch" type="xml">


                <form >


                    <sheet>


                     


                            <group>


                                <field name="number_of_points" />
                                
                                <field name="price"></field>
                                


                            </group>



                    </sheet>

                </form>

            </field>

        </record>
        
        <record id="points_action_window_taleb" model="ir.actions.act_window">

            <field name="name">Points</field>

            <field name="res_model">points</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field>
        </record>

        <menuitem id="points_menu_item" name="Points" sequence="4" parent="list_payment_type_menu_item"
            action="points_action_window_taleb" />
           
    </data>
   
    </odoo>
    