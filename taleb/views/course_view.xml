<?xml version="1.0"?>

<odoo>

    <data>


        <record id="user_courses_list_view_taleb" model="ir.ui.view">

            <field name="name">User Courses List</field>

            <field name="model">courses</field>


            <field name="arch" type="xml">


                <tree>

                    <field name="name" />
                    <field name="subject_class" optional="hide" />
                    <field name="teacher_id" />
                    <field name="brief" />
                    <field name="date_of_create" />
                    <field name="duration" optional="hide" />
                    
                

                </tree>

            </field>

        </record>


        <record id="user_courses_form_view_taleb" model="ir.ui.view">

            <field name="name">Courses Form</field>

            <field name="model">courses</field>


            <field name="arch" type="xml">


                <form string="Courses">


                    <sheet>


                        <group>


                            <group>

                                <field name="name" />
                                <field name="is_publish" widget="boolean_toggle"/>
                                
                                <field name="course_number"/>
                                <field name="rate" />
                                <field name="number_of_rater" />
                                <field name="date_of_create" />
                                <field name="skills_id" widget='many2many_tags'/>
                                <field name="duration" />
                                <field name="dacast_id" />

                    
                            </group>


                            <group>
                                <field name="image" filename="image_file_name" class="oe_avatar" />

                                <field name="image_path" />
                                <field name="teacher_id" />
                                <field name="teacher_name" />
                                <field name="subject_class" />
                                <field name="brief" />
                                <field name="cost" />
                                <!-- <field name="cost2" />
                                <field name="cost4" />
                                <field name="cost5" /> -->
                                <field name="expiration_month" />
                                <field name="number_of_student" />


                            </group>

                        </group>
                        <group>
                            <field name="about_this_course" />

                        </group>
                        
                        <notebook>
                            <page name="section" string="Sections">
                                <field name="course_sections_ids" context="{'course_id':active_id}">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="duration" />
                                        <field name="cost" />
                                        <field name='brief' />
                                        <field name='order_num' />
                                        
                                    </tree>
                                </field>
                            </page>

                        </notebook>


                    </sheet>
                    <!-- <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div> -->

                </form>

            </field>

        </record>


        <record id="courses_action_window_taleb" model="ir.actions.act_window">

            <field name="name">User Courses</field>

            <field name="res_model">courses</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field>

        </record>

        <menuitem id="taleb_user_courses" name="Courses" sequence="0" parent="teleb_root" />
        <menuitem id="taleb_user_courses1" name="Courses" sequence="1" parent="taleb_user_courses" action="courses_action_window_taleb"/>


    </data>

</odoo>