<?xml version="1.0"?>

<odoo>

    <data>


        <record id="user_points_view_taleb" model="ir.ui.view">

            <field name="name">Add Points</field>

            <field name="model">points.user</field>


            <field name="arch" type="xml">


                 <tree default_order='id dec'>

                    <field name="user_id" />



                    <field name="total_points"/>
                    
                    <!-- <field name="total_points"/> -->
                    <field name="created_date"/>


                </tree>

            </field>

        </record>
        <record id="points_user_form_view_taleb" model="ir.ui.view">

            <field name="name">Points User Form</field>

            <field name="model">points.user</field>


            <field name="arch" type="xml">


                <form string="">
                


                    <sheet>


                     


                            <group>
                                <!-- <field name="user_id" /> -->
                                


                                <field name="user_id" />
                                
                                <!-- <field  class="image" name="image" filename="image_file_name"/> -->
                                <field name="points"></field>
                                <field name="total_points"></field>
                            </group>



                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <!-- <field name="activity_ids"/> -->
                        <!-- <field name="last_modified"/> -->
                    </div>
                   

                </form>

            </field>

        </record>
        <record id="points_user_action_window_taleb" model="ir.actions.act_window">

            <field name="name">Points</field>

            <field name="res_model">points.user</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field>

        </record>
        <!-- <menuitem id="list_payment_type_menu_item" name="Payment Type" sequence="3" parent="teleb_root" /> -->
        <menuitem id="user_points_menu_item" name="Add Points" sequence="3" parent="list_payment_type_menu_item"
            action="points_user_action_window_taleb" />
        
    
    
    </data></odoo>