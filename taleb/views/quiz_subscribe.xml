<?xml version="1.0"?>

<odoo>

    <data>


        <record id="user_quiz_subscribe_list_view_taleb" model="ir.ui.view">

            <field name="name">User quiz.subscribe List</field>

            <field name="model">quiz.subscribe</field>


            <field name="arch" type="xml">


                <tree>

                    <field name="user_id" />
                    <field name="course_id" widget='many2many_tags'/>
                    


                </tree>

            </field>

        </record>


        <record id="user_quiz_subscribe_form_view_taleb" model="ir.ui.view">

            <field name="name">quiz.subscribe Form</field>

            <field name="model">quiz.subscribe</field>


            <field name="arch" type="xml">


                <form string="quiz.subscribe">


                    <sheet>


                        <group>


                            <group>

                                <field name="user_id" />
                                <field name="subject_class" />
                                <field name="course_id" widget='many2many_tags'/>
                                


                            </group>


                            

                        </group>


                        

                    </sheet>

                </form>

            </field>

        </record>


        <record id="quiz_subscribe_action_window_taleb" model="ir.actions.act_window">

            <field name="name">User quiz.subscribe</field>

            <field name="res_model">quiz.subscribe</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field>

        </record>

        <menuitem id="taleb_user_quiz_subscribe1" name="Quiz subscribe" sequence="8" parent="taleb_user_courses" action="quiz_subscribe_action_window_taleb"/>


    </data>

</odoo>