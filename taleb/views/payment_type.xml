<?xml version="1.0"?>

<odoo>

    <data>


        <record id="payment_list_view_taleb" model="ir.ui.view">

            <field name="name">Payment Type </field>

            <field name="model">payment.type</field>


            <field name="arch" type="xml">


                <tree>

                    <field name="name" />
                    <field   name="image" />
                    <field   name="receiver_name" />
                    <!-- <field   name="phone_number" /> -->



                </tree>

            </field>

        </record>
        <record id="payment_type_form_view_taleb" model="ir.ui.view">

            <field name="name">Payment Form</field>

            <field name="model">payment.type</field>


            <field name="arch" type="xml">


                <form string="about Us">


                    <sheet>


                     


                            <group>


                                <field name="name" />
                                <field  class="image" name="image" widget="" filename="image_file_name"/> 
                                <field name="image_path"></field>
                                <field  name="image_file_name" />
                                <field   name="receiver_name" />
                                <field   name="phone_number" />



                            </group>



                    </sheet>

                </form>

            </field>

        </record>
        
        <record id="payment_action_window_taleb" model="ir.actions.act_window">

            <field name="name">Payment Type</field>

            <field name="res_model">payment.type</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field>
        </record>
        <menuitem id="list_payment_type_menu_item" name="Payments" sequence="3" parent="teleb_root" />
        <menuitem id="payment_type_menu_item" name="Payment Type" sequence="3" parent="list_payment_type_menu_item"
            action="payment_action_window_taleb" />
           
    </data>
