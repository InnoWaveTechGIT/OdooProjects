<odoo>
    <data>
       <!--Define the form view for the block.student model -->
        <record id="view_block_student_form" model="ir.ui.view">
            <field name="name">block.student.form</field>
            <field name="model">block.student</field>
            <field name="arch" type="xml">
                <form string="Block/Unblock Student">
                    <group>
                        <field name="user_id"/>
                        <field name="block"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Define the tree view for the block.student model -->
        <record id="view_block_student_tree" model="ir.ui.view">
            <field name="name">block.student.tree</field>
            <field name="model">block.student</field>
            <field name="arch" type="xml">
                <tree string="Blocked Students">
                    <field name="user_id"/>
                    <field name="block"/>
                </tree>
            </field>
        </record>

        <!-- Define the action that will open the form view -->
            
        <record id="block_student_window_taleb" model="ir.actions.act_window">

            <field name="name">block/unblock student </field>

            <field name="res_model">block.student</field>

            <field name="view_mode">tree,form</field>

            <field name="context">{}</field>
        </record>
       
       <menuitem id="block_student_menu_item"
                  name="Blocked Students"
                  sequence="33"
                  action="block_student_window_taleb"
                  parent="teleb_root"/>
    
       
       </data>
</odoo>