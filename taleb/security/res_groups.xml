<odoo>
    <record model="ir.module.category" id="module_category_taleb">
        <field name="name">Taleb</field>
        <field name="sequence">10</field>
    </record>
    <record id="res_groups_taleb_supervisor" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="category_id" ref="module_category_taleb"/>
        
    </record>
    <record id="res_groups_taleb_teacher" model="res.groups">
        <field name="name">Teacher</field>
        <field name="category_id" ref="module_category_taleb"/>
        <field name="implied_ids" eval="[(4, ref('res_groups_taleb_supervisor'))]"/>
    </record>
    <record id="res_groups_taleb_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="module_category_taleb"/>
        <field name="implied_ids" eval="[(4, ref('res_groups_taleb_teacher'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>
</odoo>