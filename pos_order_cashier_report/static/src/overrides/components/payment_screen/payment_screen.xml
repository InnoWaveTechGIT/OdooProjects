<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="Paymentscreen" t-inherit="point_of_sale.PaymentScreenButtons"
       t-inherit-mode="extension">
        <xpath expr="//div[hasclass('payment-buttons')]" position="inside">
            <button class="button button-partial-payment btn btn-light py-3 text-start rounded-0 border-bottom"
                    t-on-click="openinvoicepopup">
                    <i class="fa fa-money me-2"/>Add Invoice Ref
                    </button>
        </xpath>
    </t>
</templates>
