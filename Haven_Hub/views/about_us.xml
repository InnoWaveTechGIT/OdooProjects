<?xml version="1.0"?>

<odoo>

    <data>


        <record id="user_about_us_list_view_haven" model="ir.ui.view">

            <field name="name">User about_us List</field>

            <field name="model">about.us.haven</field>


            <field name="arch" type="xml">


                <list>

                    <field name="title" />
                    <field name="brief" />


                </list>

            </field>

        </record>


        <record id="user_about_us_form_view_haven" model="ir.ui.view">

            <field name="name">about_us Form</field>

            <field name="model">about.us.haven</field>


            <field name="arch" type="xml">


                <form string="about Us">


                    <sheet>


                        <group>


                            <group>


                                <field name="title" />


                            </group>


                            <group>

                                <field name="brief" />

                            </group>
                            <group>
                                <field name="face_book" />
                                <field name="linked_in" />
                                <field name="instagram" />
                            </group>

                        </group>


                    </sheet>

                </form>

            </field>

        </record>


        <record id="about_us_action_window_haven" model="ir.actions.act_window">

            <field name="name">About Us</field>

            <field name="res_model">about.us.haven</field>

            <field name="view_mode">list,form</field>

            <field name="context">{}</field>


            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">Create your first user token Record! </p>

            </field>
        </record>


        <menuitem id="HavenHub_root" name="HavenHub" sequence="10"/>
        <menuitem id="HavenHub_Configration" name="Configration" parent="HavenHub_root" sequence="10"/>
        <menuitem id="haven_user_about_us" name="About Us" sequence="4" parent="HavenHub_Configration"
            action="about_us_action_window_haven" />

    </data>

</odoo>
