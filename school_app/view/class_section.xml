<odoo>
    <data>
        <!-- Form View -->
        <record id="view_student_class_section_form" model="ir.ui.view">
            <field name="name">section.school.app.form</field>
            <field name="model">section.school.app</field>
            <field name="arch" type="xml">
                <form string="Student Class">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="year_id" />
                                <field name="student_ids2"  widget="many2many_tags" />
                                <field name="teacher_ids"  widget="many2many_tags" />
                                <field name="teacher_id" />
                                <field name="is_valid" />
                            </group>
                            <group>
                                <field name="image" widget="image" class="oe_avatar"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_student_class_section_tree" model="ir.ui.view">
            <field name="name">section.school.app.tree</field>
            <field name="model">section.school.app</field>
            <field name="arch" type="xml">
                <tree string="Student Class">
                    <field name="name" />
                    <field name="year_id" />
                    <field name="teacher_id" />
                    <field name="is_valid" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_student_class_section" model="ir.actions.act_window">
            <field name="name">Student Section</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">section.school.app</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_student_class_list" name="Student Section" parent="menu_temperature"
            action="action_student_class_section" />
    </data>
</odoo>