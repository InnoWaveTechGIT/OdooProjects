<!-- device_school_app_views.xml -->
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_device_school_app_form" model="ir.ui.view">
            <field name="name">student.devices.form</field>
            <field name="model">student.devices</field>
            <field name="arch" type="xml">
                <form string="device School App">
                    <sheet>
                        <group>
                            <field name="user_id" />

                        </group>
                        <notebook>
                            <page string="Devices">
                                <field name="device_ids" >
                                    <tree editable="bottom">
                                        <field name="user_id" />
                                        <field name="identification" />
                                        <field name="device_name" />
                                        <field name="is_admin" />
                                    </tree>
                                </field>     
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_device_school_app_tree" model="ir.ui.view">
            <field name="name">student.devices.tree</field>
            <field name="model">student.devices</field>
            <field name="arch" type="xml">
                <tree string="device School App">
                    <field name="user_id" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_device_school_app" model="ir.actions.act_window">
            <field name="name">device School App</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.devices</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_device_school_app_list" name="Device" parent="menu_temperature"
            action="action_device_school_app" />
    </data>
</odoo>