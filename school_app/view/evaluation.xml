<odoo>
    <data>
        <!-- Form View -->
        <record id="view_student_evaluation_form" model="ir.ui.view">
            <field name="name">student.evaluation.report.form</field>
            <field name="model">student.evaluation.report</field>
            <field name="arch" type="xml">
                <form string="Student Class">
                    <sheet>
                        <group>
                            <group>
                                <field name="student_id" />
                                <field name="subject_id" />
                                <field name="teacher_id" />
                                <field name="rate" />
                                <field name="note" />
                                <field name="date" />
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_student_evaluation_tree" model="ir.ui.view">
            <field name="name">student.evaluation.report.tree</field>
            <field name="model">student.evaluation.report</field>
            <field name="arch" type="xml">
                <tree string="Student Class">
                    <field name="student_id" />
                                <field name="subject_id" />
                                <field name="teacher_id" />
                                <field name="rate" />
                                <field name="note" />
                                <field name="date" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_student_evaluation" model="ir.actions.act_window">
            <field name="name">Student Evaluation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.evaluation.report</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_student_evaluation_list" name="Student Evaluation" parent="menu_student_report"
            action="action_student_evaluation" />
    </data>
</odoo>