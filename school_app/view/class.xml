<odoo>
    <data>
        <!-- Form View -->
        <record id="view_student_class_form" model="ir.ui.view">
            <field name="name">class.school.app.form</field>
            <field name="model">class.school.app</field>
            <field name="arch" type="xml">
                <form string="Student Class">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="year_id" />
                                <field name="is_valid" />
                            </group>
                            <group>
                                <field name="image" widget="image" class="oe_avatar"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_student_class_tree" model="ir.ui.view">
            <field name="name">class.school.app.tree</field>
            <field name="model">class.school.app</field>
            <field name="arch" type="xml">
                <tree string="Student Class">
                    <field name="name" />
                    <field name="year_id" />
                    <field name="is_valid" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_student_class1" model="ir.actions.act_window">
            <field name="name">Student Class</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">class.school.app</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_student_class_list1" name="Student Class" parent="menu_temperature"
            action="action_student_class1" />
    </data>
</odoo>