<odoo>

    <record id="view_order_form_add_products_field" model="ir.ui.view">
        <field name="name">sale.order.form.add.products.field</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="all_order_products" widget="many2many_tags"/>

                <button name="create_products"
                        string="Custom Action"
                        type="object"
                        class="btn btn-primary"/>
            </xpath>
        </field>
    </record>

</odoo>

