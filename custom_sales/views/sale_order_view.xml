<odoo>
    <data>

        <record id="sale_order_form_inherit" model="ir.ui.view">
            <field name="name">sale_order_form_view_inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="is_contract" readonly="1"/>
                    <field name="confirmed" readonly="1" invisible=" is_contract == False"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="seller_id" invisible=" is_contract == False"/>
                    <field name="mazady_contract_id" readonly="1" invisible=" is_contract == False"/>
                    <field name="service_id" readonly="1" invisible=" is_contract == False"/>
                    <field name="service_type" readonly="1" invisible=" service_type == False"/>
                    <field name="paid_feature_type" readonly="1" invisible=" paid_feature_type == False"/>
                </xpath>

                <!-- <xpath expr="//header[1]" position="inside">
                    <button name="confirm_contract" data-hotkey="q" string="Confirm Contract"
                            class="btn-primary" type="object" invisible="is_contract == False"/>
                </xpath> -->


            </field>
        </record>
        <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
            <field name="domain">[('is_contract', '=', False)]</field>

        </record>
        <record id="action_quotations_contract" model="ir.actions.act_window">
            <field name="name">Contracts(Deals)</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">list,kanban,form,calendar,pivot,graph,activity</field>
            <field name="context">{'search_default_is_contract': 1}</field>
            <field name="domain">[('is_contract', '=', True)]</field>
            <field name="help" type="html">
                <br/>
                <h2>
                    Beat competitors with stunning quotations!
                </h2>
                <p>
                    Boost sales with online payments or signatures, upsells, and a great customer portal.
                </p>
                <a
                        role="button"
                        class="btn btn-secondary"
                        href="https://www.odoo.com/documentation/master/_downloads/56a93429515b36105d952e1d2b802f9e/sample_quotation.pdf"
                        target="_blank"
                >
                    Check a sample. It's clean!
                </a>
            </field>
        </record>
        <menuitem id="menu_sale_quotations_contract"
                  action="action_quotations_contract"
                  groups="sales_team.group_sale_salesman"
                  parent="sale.sale_order_menu"
                  sequence="10"/>

    </data>
</odoo>
