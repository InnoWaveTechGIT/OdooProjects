<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_delivery_transfer_wizard_form" model="ir.ui.view">
        <field name="name">delivery.transfer.wizard.form</field>
        <field name="model">delivery.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Delivery Transfer">
                <group>
                    <field name="purchase_order_id" readonly="1"/>
                    <field name="partner_id" required="1"/>
                    <field name="project_id"/>
                </group>

                <field name="line_ids">
                    <list editable="bottom">
                        <field name="product_id" />
                        <field name="name" />
                        <field name="product_qty"/>
                    </list>
                </field>

                <footer>
                    <button name="action_create_delivery" string="Create Delivery" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
