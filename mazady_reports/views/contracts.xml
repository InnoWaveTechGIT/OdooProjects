<odoo>

    <record id="contract_view_list" model="ir.ui.view">
        <field name="name">contract.view.list</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <list string="Deals" create="0" delete="0">
                <field name="date_order"/>
                <field name="name"/>
                <field name="partner_sub_id" string="Customer ID"/>
                <field name="partner_id"/>
                <field name="seller_sub_id"/>
                <field name="seller_id"/>
                <field name="product_id"/>
                <field name="product_Description"/>
                <field name="Price_unit"/>
                <field name="tax_id"/>
                <field name="Product_uom_qty"/>
                <field name="price_total"/>
                <field name="price_tax"/>
                <field name="commission_amount"/>
                <field name="tax_amount"/>
                <field name="tax_percentage"/>
                <field name="deal_total_amount"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="contracts_action" model="ir.actions.act_window">
        <field name="name">Deals</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list</field>
        <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'list', 'view_id': ref('contract_view_list')})] "/>
        <field name="domain">[('is_contract', '=', True)]</field>
        <field name="help" type="html">
            <h1>No Deals Found.</h1>
            <p>There haven't been any Deals generated yet.</p>
        </field>
    </record>

    <menuitem id="menu_contracts" action="contracts_action" parent="menu_Doworks_reports" sequence="1"/>
</odoo>
