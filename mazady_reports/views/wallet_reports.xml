<odoo>

    <record id="loyalty_card_search_view_inherit1" model="ir.ui.view">
        <field name="name">loyalty.card.search.inherit</field>
        <field name="model">loyalty.card</field>
        <field name="inherit_id" ref="loyalty.loyalty_card_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[3]" position="after">
                <filter name="Create Date" string="Create Date" date="create_date"/>
                <field name="create_date" invisible="1"/>
                <filter string="Create Date" name="Create Date" context="{'group_by': 'create_date'}"/>
            </xpath>

        </field>
    </record>
    <record id="view_wallet_report_tree_custom123" model="ir.ui.view">
        <field name="name">loyalty.card tree custom</field>
        <field name="model">loyalty.card</field>
        <field name="arch" type="xml">
            <list>
                <field name="partner_sub_id" string="User ID"/>
                <!-- <field name="active" invisible="1"/> -->
                <field name="partner_id" string="User Name"/>
                <field name="partner_email" string="User Email"/>
                <field name="available_balance" column_invisible='True' />
                <field name="points_display" string="Available Balance"/>
                <field name="blocked_balance"/>
                <field name="total_balance"/>
                <field name="create_date"/>

            </list>

        </field>
    </record>
    <record id="view_wallet_report_form_custom123" model="ir.ui.view">
        <field name="name">loyalty.card.view.form</field>
        <field name="model">loyalty.card</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="expiration_date"/>
                            <field name="partner_id"/>
                            <field name="partner_sub_id"/>
                            <label string="Balance" for="points_display"/>
                            <button name="action_loyalty_update_balance" class="p-0 text-info fw-normal" type="object">
                                <field name="points_display" nolabel="1"/>
                            </button>
                            <field name="blocked_balance"/>
                            <field name="total_balance"/>
                        </group>
                    </group>
                    <notebook invisible="not id">
                        <page string="History Lines">
                            <field name="history_ids">
                                <list>
                                    <field name="description"/>
                                    <field name="order_id"/>
                                    <field name="create_date" string="Date"/>
                                    <field name="issued"/>
                                    <field name="used"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>


    <record id="Wallet_reports_action1" model="ir.actions.act_window">
        <field name="name">Wallets Reports</field>
        <field name="res_model">loyalty.card</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_wallet_report_tree_custom123')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_wallet_report_form_custom123')})]"/>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
            <h1>No Coupons Found.</h1>
            <p>There haven't been any coupons generated yet.</p>
        </field>
    </record>




    <menuitem id="menu_wallet_reports"
              action="Wallet_reports_action1"
              parent="menu_Doworks_reports"
              sequence="2"/>
</odoo>
