<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="priority" eval="60"/>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='use_expiration_date']" position="after">
                 <field name="allow_manufacturing_date" invisible="1"/>
                <field name="use_manufacturing_date" invisible="tracking == 'none' or not use_expiration_date or not allow_manufacturing_date"/>
             </xpath>
        </field>
    </record>
</odoo>
