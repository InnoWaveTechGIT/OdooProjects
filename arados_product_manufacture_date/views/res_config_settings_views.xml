<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_stock" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.stock.stock</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="60"/>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//block[@id='production_lot_info']" position="inside">
                  <setting id="arados_manufacturing_date" help="Set Production date on received &amp; serial numbers" invisible="not group_stock_production_lot or not module_product_expiry">
                        <field name="allow_manufacturing_date"/>
                  </setting>
             </xpath>
        </field>
    </record>

</odoo>
