<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <record id="view_move_form_expiry" model="ir.ui.view">
        <field name="name">stock.production.lot.inherit.form</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">
        <xpath expr="//page[@name='expiration_dates']/group" position="inside">
            <field name="use_manufacturing_date" invisible="1"/>
            <group string="Manufacturing Date" name="manufacturing_date" invisible="not use_manufacturing_date">
                <field name="date_of_manufacturing"/>
            </group>
        </xpath>
        </field>
    </record>
</odoo>
